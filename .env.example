# Django Settings
SECRET_KEY=your-secret-key-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-nas-hostname

# Timezone (IMPORTANT: Set this to your local timezone for correct reminder times)
# Examples: America/New_York, America/Los_Angeles, Europe/London, Asia/Tokyo
TIME_ZONE=America/New_York

# Site URL (used for email links - set to your actual domain)
SITE_URL=https://your-domain.com

# Logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Email Configuration (for review reminders)
# Use console backend for development, smtp for production
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Flashcard App <your-email@gmail.com>
